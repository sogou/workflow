name: CI/CD Node App to Azure

on:
  push:
    branches:
      - main

jobs:
  build-and-deploy:
    runs-on: ubuntu-latest

    steps:
    - name: Checkout code
      uses: actions/checkout@v3

    - name: Setup Node
      uses: actions/setup-node@v3
      with:
        node-version: '18'

    - name: Install dependencies
      run: npm install

    - name: Run tests
      run: npm test

    - name: Zip App
      run: zip -r myapp.zip .

    - name: Deploy to Azure
      uses: azure/webapps-deploy@v2
      with:
        app-name: 'my-node-webapp-demo'  # ← اسم الـ App Service
        publish-profile: ${{ secrets.AZURE_WEBAPP_PUBLISH_PROFILE }}
        package: myapp.zip

